{
  "name": "iam-fileserver",
  "version": "1.0.0",
  "description": "IAM File Server - Automated Download Management System",
  "private": true,
  "workspaces": [
    "backend",
    "frontend", 
    "shared",
    "providers"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=shared && npm run build --workspace=backend && npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "setup": "npm install && npm run build:shared",
    "build:shared": "npm run build --workspace=shared"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
