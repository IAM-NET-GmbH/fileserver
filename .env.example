# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_PATH=./data

# File Storage Configuration
DOWNLOAD_PATH=./downloads
MAX_FILE_SIZE=5368709120
ALLOWED_FILE_TYPES=.exe,.zip,.istapdata,.bin

# Provider Configuration - Automatic Check Interval
CHECK_INTERVAL_HOURS=6

# BMW AOS Provider Configuration
BMW_USERNAME=your-bmw-username
BMW_PASSWORD=your-bmw-password
BMW_AUTH_URL=https://aos.bmwgroup.com/auth/login
BMW_ISTA_P_URL=https://aos.bmwgroup.com/ista-p
BMW_ISTA_NEXT_URL=https://aos.bmwgroup.com/ista-next
HEADLESS=true

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://fileserver.terhorst.io

# System Configuration
DEBUG=false
RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/fileserver.log
